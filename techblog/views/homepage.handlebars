<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets -->
     
      <a href="/project/{{project.id}}">{{project.blog_title}}</a>
    </h2>
  
    <p>Created by {{project.user.username}} on {{format_date project.date_created}}</p> 
  </div>
  <div class="col-md-7">
    <p>
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}

